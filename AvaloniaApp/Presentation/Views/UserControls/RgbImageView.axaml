<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm ="using:AvaloniaApp.Presentation.ViewModels.UserControls"
             x:Class="AvaloniaApp.Presentation.Views.UserControls.RgbImageView"
             x:DataType="vm:RgbImageViewModel">  

    <!-- 전체 여백 적용 -->
    <Grid RowDefinitions="*,Auto" Margin="16">
        
        <!-- 이미지 영역 스타일링 -->
        <Border Background="#222222" 
                BorderBrush="#333333"
                BorderThickness="1"
                CornerRadius="12"
                ClipToBounds="True">
            
            <Viewbox Stretch="Uniform">
                <Image x:Name="RgbImage"
                       Source="{Binding CameraVM.RgbBitmap}"
                       Width="{Binding CameraVM.CropWidth}"
                       Height="{Binding CameraVM.CropHeight}"
                       Stretch="Fill"/> 
            </Viewbox>
        </Border>

    </Grid>
</UserControl>
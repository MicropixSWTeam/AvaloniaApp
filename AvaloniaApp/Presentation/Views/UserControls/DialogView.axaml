<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AvaloniaApp.Presentation.ViewModels.UserControls"
             x:Class="AvaloniaApp.Presentation.Views.UserControls.DialogView"
             x:DataType="vm:DialogViewModel">
    
    <Border Background="{DynamicResource AppCardBrush}" 
            BorderBrush="{DynamicResource AppBorderBrush}"
            BorderThickness="1"
            CornerRadius="8" 
            BoxShadow="0 4 12 0 #50000000" 
            Width="300"
            Height="200">
        
        <Grid RowDefinitions="Auto, *, Auto" Margin="20">
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="{Binding Title}" 
                           Foreground="{Binding HeaderColor}" 
                           FontWeight="Bold" 
                           FontSize="16"/>
            </StackPanel>
            
            <ScrollViewer Grid.Row="1" MaxHeight="150" VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding Message}" 
                           TextWrapping="Wrap" 
                           Foreground="{DynamicResource AppTextBrush}"
                           FontSize="13"
                           LineHeight="20"/>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,20,0,0">
                <Button Command="{Binding ConfirmCommand}" 
                        Content="확인"
                        Background="{Binding HeaderColor}" 
                        Foreground="White" 
                        FontWeight="SemiBold"
                        CornerRadius="6"
                        FontSize="13"
                        Padding="12,6"/>

                <Button Command="{Binding CancelCommand}" 
                        IsVisible="{Binding IsCancelVisible}"
                        Content="취소"
                        Background="Transparent"
                        BorderBrush="{DynamicResource AppBorderBrush}"
                        BorderThickness="1"
                        Foreground="{DynamicResource AppSubTextBrush}"
                        CornerRadius="6"
                        FontSize="13"
                        Padding="12,6"/>
                

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaApp.Presentation.ViewModels.Windows"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dialogHost="using:DialogHostAvalonia"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApp.Presentation.Views.Windows.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaApp">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
        <dialogHost:DialogHost Identifier="RootDialogHost"
                           CloseOnClickAway="True">

        <!-- 다이얼로그용 영역 -->
        <dialogHost:DialogHost.DialogContent>
            <!-- DataTemplate로 ViewModel → View를 매핑할 것이므로 그냥 ContentControl -->
            <ContentControl />
        </dialogHost:DialogHost.DialogContent>

        <!-- 실제 메인 화면 -->
        <DockPanel HorizontalAlignment="Left" VerticalAlignment="Top">
			<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="0">
                <Button Content="ConnectCamera" Command="{Binding OpenCameraConnectViewAsync}" BorderThickness="0" CornerRadius="0"/>
                <Button Content="Camera" Command="{Binding OpenCameraViewAsync}" BorderThickness="0" CornerRadius="0"/>
                <Button Content="SpectrumChart" Command="{Binding OpenChartViewAsync}" BorderThickness="0" CornerRadius="0"/>
            </StackPanel>
        </DockPanel>

    </dialogHost:DialogHost>

</Window>

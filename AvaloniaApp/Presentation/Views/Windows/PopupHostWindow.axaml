<Window xmlns="https://github.com/avaloniaui"
        xmlns:comtypes="using:System.Runtime.InteropServices.ComTypes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="using:AvaloniaApp.Presentation.Views.UserControls"
        xmlns:vm="using:AvaloniaApp.Presentation.ViewModels.UserControls"
        xmlns:window="using:AvaloniaApp.Presentation.ViewModels.Windows"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
        Width="{Binding}" Height="{Binding}"
        x:Class="AvaloniaApp.Presentation.Views.Windows.PopupHostWindow"
        x:DataType="window:PopupHostWindowViewModel">
    <Window.DataTemplates>

        <DataTemplate DataType="{x:Type vm:RawImageViewModel}">
            <v:RawImageView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:RgbImageViewModel}">
            <v:RgbImageView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:CameraSettingViewModel}">
            <v:CameraSettingView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ChartViewModel}">
            <v:ChartView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ProcessViewModel}">
            <v:ProcessView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DialogViewModel}">
            <v:DialogView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LoadViewModel}">
            <v:LoadView />
        </DataTemplate>
    </Window.DataTemplates>

    <ContentControl Content="{Binding}"/>

</Window>

<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dialogHost="using:DialogHostAvalonia"
             xmlns:presentation="using:AvaloniaApp.Presentation"
             x:Class="AvaloniaApp.App"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <presentation:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <Color x:Key="AppBackgroundColor">#020617</Color> 
        <Color x:Key="AppSurfaceColor">#0F172A</Color>      <Color x:Key="AppSurfaceHoverColor">#1E293B</Color> <Color x:Key="AppPrimaryStart">#38BDF8</Color>      <Color x:Key="AppPrimaryEnd">#2563EB</Color>        <Color x:Key="AppBorderColor">#1E293B</Color>       <Color x:Key="AppGlowColor">#4038BDF8</Color>       <Color x:Key="AppTextPrimary">#F1F5F9</Color>       <Color x:Key="AppTextSecondary">#94A3B8</Color>     <Color x:Key="AppTextDisabled">#475569</Color>

        <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}"/>
        <SolidColorBrush x:Key="AppSurfaceBrush" Color="{StaticResource AppSurfaceColor}"/>
        <SolidColorBrush x:Key="AppBorderBrush" Color="{StaticResource AppBorderColor}"/>
        <SolidColorBrush x:Key="AppTextPrimaryBrush" Color="{StaticResource AppTextPrimary}"/>
        <SolidColorBrush x:Key="AppTextSecondaryBrush" Color="{StaticResource AppTextSecondary}"/>
        <SolidColorBrush x:Key="AppTextDisabledBrush" Color="{StaticResource AppTextDisabled}"/>

        <LinearGradientBrush x:Key="AppPrimaryGradientBrush" StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Offset="0" Color="{StaticResource AppPrimaryStart}"/>
            <GradientStop Offset="1" Color="{StaticResource AppPrimaryEnd}"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="AppPrimaryHoverGradientBrush" StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Offset="0" Color="#7DD3FC"/> <GradientStop Offset="1" Color="#3B82F6"/> </LinearGradientBrush>

    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <dialogHost:DialogHostStyles />

        <Style Selector="Window">
            <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
            <Setter Property="FontFamily" Value="Pretendard, Segoe UI, Apple SD Gothic Neo, Malgun Gothic, sans-serif"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style Selector="Button.Primary">
            <Setter Property="Background" Value="{DynamicResource AppPrimaryGradientBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="10"/> <Setter Property="Padding" Value="24,12"/>   <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button.Primary:pointerover">
            <Setter Property="Background" Value="{DynamicResource AppPrimaryHoverGradientBrush}"/>
            <Setter Property="RenderTransform" Value="translateY(-1px)"/> </Style>
        <Style Selector="Button.Primary:pointerover /template/ ContentPresenter">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="Button.Primary:pressed">
            <Setter Property="RenderTransform" Value="scale(0.98) translateY(0px)"/>
        </Style>


        <Style Selector="Border.Card">
            <Setter Property="Background" Value="{DynamicResource AppSurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="BoxShadow" Value="0 4 6 -1 #33000000"/> 
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Border.Card:pointerover">
            <Setter Property="BorderBrush" Value="#334155"/> <Setter Property="Background" Value="{DynamicResource AppSurfaceHoverColor}"/>
        </Style>


        <Style Selector="TextBox">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Background" Value="#020617"/> <Setter Property="BorderBrush" Value="{DynamicResource AppBorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
            <Setter Property="SelectionBrush" Value="{DynamicResource AppPrimaryStart}"/>
            <Setter Property="SelectionForegroundBrush" Value="Black"/>
            <Setter Property="CaretBrush" Value="{DynamicResource AppPrimaryStart}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style Selector="TextBox:empty /template/ TextBlock#PART_Watermark">
            <Setter Property="Foreground" Value="{DynamicResource AppTextDisabledBrush}"/>
        </Style>

        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="{DynamicResource AppPrimaryStart}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BoxShadow" Value="0 0 0 2 #2238BDF8"/> </Style>
        
        <Style Selector="TextBlock.H1">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource AppTextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style Selector="TextBlock.Caption">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource AppTextSecondaryBrush}"/>
        </Style>

    </Application.Styles>
</Application>